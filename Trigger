CREATE OR REPLACE TRIGGER TR1
AFTER DELETE OR UPDATE
ON EMP_DETAILS
FOR EACH ROW
BEGIN
    IF DELETING THEN
        INSERT INTO EMP_DELETED 
        VALUES(:OLD.ID, :OLD.NAME, :OLD.SALARY);
    ELSIF UPDATING THEN
        INSERT INTO EMP_UPDATED 
        VALUES(:OLD.ID, :OLD.SALARY, :NEW.SALARY);
    END IF;
END;
/
