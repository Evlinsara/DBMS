CREATE OR REPLACE PACKAGE MYPK1 IS
PROCEDURE PROC1(A IN NUMBER,B IN NUMBER,SUM OUT NUMBER,AVG OUT NUMBER,PRO OUT NUMBER);
PROCEDURE PROC2(A IN NUMBER,RES OUT NUMBER);
FUNCTION FN11(A IN NUMBER) RETURN VARCHAR2;
FUNCTION FN22(A IN NUMBER,B IN NUMBER,C IN NUMBER) RETURN NUMBER;
END MYPK1;
/
CREATE OR REPLACE PACKAGE BODY MYPK1 IS

PROCEDURE PROC1(A IN NUMBER,B IN NUMBER,SUM OUT NUMBER,AVG OUT NUMBER,PRO OUT NUMBER) IS
BEGIN
    SUM:=A+B;
    AVG:=(A+B)/2;
    PRO:=A*B;
END PROC1;

PROCEDURE PROC2(A IN NUMBER,RES OUT NUMBER) IS
BEGIN
    RES:=SQRT(A);
END PROC2;

FUNCTION FN11(A IN NUMBER) RETURN VARCHAR2 IS
BEGIN
IF MOD(A,2)=0 THEN
RETURN 'EVEN';
ELSE
RETURN 'ODD';
END IF;
END FN11;

FUNCTION FN22(A IN NUMBER,B IN NUMBER,C IN NUMBER) RETURN NUMBER IS
BEGIN
    RETURN A+B+C;
END FN22;
END MYPK1;

DECLARE
N1 NUMBER;
N2 NUMBER;
S NUMBER;
AV NUMBER;
PR NUMBER;
N3 NUMBER;
SQ NUMBER;
N4 NUMBER;
EV VARCHAR2(10);
N5 NUMBER;
N6 NUMBER;
N7 NUMBER;
TOT NUMBER;

BEGIN
N1 :=&FIRST_NUMBER_FOR_CALCULATION;
N2 :=&SECOND_NUMBER_FOR_CALCULATION;
MYPK1.PROC1(N1,N2,S,AV,PR);
DBMS_OUTPUT.PUT_LINE('SUM IS '||S);
DBMS_OUTPUT.PUT_LINE('AVERAGE IS '||AV);
DBMS_OUTPUT.PUT_LINE('PRODUCT IS '||PR);
N3 :=&VALUE_TO_FIND_SQUAREROOT;
MYPK1.PROC2(N3,SQ);
DBMS_OUTPUT.PUT_LINE('SQUARE ROOT IS '||SQ);
N4 :=&VALUE_TO_CHECK_EVENORODD;
EV :=MYPK1.FN11(N4);
DBMS_OUTPUT.PUT_LINE('NUM IS '||EV);
N5 :=&FIRST_NUM;
N6 :=&SECOND_NUM;
N7 :=&THIRD_NUM;
TOT :=MYPK1.FN22(N5,N6,N7);
DBMS_OUTPUT.PUT_LINE('TOTAL IS '||TOT);
END;
/




